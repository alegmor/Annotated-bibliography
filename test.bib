@article{chen2024review,
  title={Review on numerical simulation of boiling heat transfer from atomistic to mesoscopic and macroscopic scales},
  author={Chen, Yujie and Yu, Bo and Lu, Wei and Wang, Bohong and Sun, Dongliang and Jiao, Kaituo and Zhang, Wei and Tao, Wenquan},
  journal={International Journal of Heat and Mass Transfer},
  volume={225},
  pages={125396},
  year={2024},
  publisher={Elsevier},
  annotation = {These authors conducted a comprehensive review of pool boiling simulations across multiple scales, comparing Molecular Dynamics Simulations (MDS), the Lattice Boltzmann Method (LBM), and macroscopic Computational Fluid Dynamics (CFD). Their analysis highlights the strengths and limitations of each approach. MDS enables the study of nanoscale bubble nucleation and explosive boiling, but its computational cost restricts its use to small systems. CFD, on the other hand, is effective for modeling large-scale boiling flows, yet it requires complex empirical models to account for bubble nucleation, phase transitions, and interface dynamics, making simulations computationally demanding and heavily parameter-dependent.

LBM stands out as a promising approach that bridges the gap between atomistic and macroscopic methods. Unlike MDS and CFD, LBM’s pseudopotential model can simulate the entire boiling process without requiring preset nucleation sites or explicit interface reconstruction, simplifying computations while still capturing key phase transition dynamics. Additionally, LBM is well-suited for modeling bubble nucleation, growth, coalescence, and detachment, making it a practical alternative for simulating pool boiling, particularly in cryogenic applications.}
}

