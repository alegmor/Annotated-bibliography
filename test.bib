@book{zohuri2017physics,
  title={Physics of cryogenics: an ultralow temperature phenomenon},
  author={Zohuri, Bahman},
  year={2017},
  publisher={Elsevier},
  chapter={14.8},
  pages={458--459},
  annotation = { During transportation and storage, cryogenic fluids remain in a metastable state, meaning they exist at their boiling temperature but remain in the liquid phase. This metastability occurs because the system is carefully controlled to prevent phase change. However, exposure to leakage, pressure fluctuations, or sudden heat transfer can disturb this balance, causing the liquid to rapidly vaporize and transition to a stable gaseous phase.

Traditionally, these systems are studied under thermodynamic equilibrium, assuming stable conditions where heat and mass transfer are balanced. However, this approach is incorrect because cryogenic fluids in storage and transport are not truly in equilibrium—they are constantly subject to small disturbances, thermal gradients, and pressure changes. Ignoring their metastable nature overestimates stability and underestimates risks, making it crucial to analyze these fluids under realistic, dynamic conditions rather than idealized equilibrium assumptions.} 
}

